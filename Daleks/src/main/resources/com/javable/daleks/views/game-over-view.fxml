<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.javable.daleks.controllers.GameOverController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <ImageView fitHeight="150.0" fitWidth="400.0" pickOnBounds="true" preserveRatio="true">
        <VBox.margin>
            <Insets bottom="20.0"/>
        </VBox.margin>
        <Image fx:id="GameOverImage" url="@../images/game_over.png"/>
    </ImageView>
    <Button text="Return to menu" onAction="#ReturnToMenuBtn"/>
</VBox>